<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <PackAsTool>true</PackAsTool>
    <PackageId>drmodconv</PackageId>
    <ToolCommandName>drmodconv</ToolCommandName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <AssemblyName>drmodconv</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AssimpNet" Version="5.0.0-beta1" />
    <PackageReference Include="MonoGame.Framework.DesktopGL" Version="$(AppMonoGameVersion)" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\Source\Storage\**\*.cs" LinkBase="Storage" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\..\Source\DrMaterial.cs" Link="DrMaterial.cs" />
    <Compile Include="..\..\Source\Utility.cs" Link="Utility.cs" />
  </ItemGroup>

</Project>
